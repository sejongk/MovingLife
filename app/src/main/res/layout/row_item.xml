<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="1dp"
    android:layout_margin="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/typeIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_directions_walk_black_24dp"
                />
            <!--걷는 모양이랑 버스 모양중에 하나 골라서 넣는 것을 activity에서 구현해야 할 듯
            버스모양은 @drawbale/ic_bus_black_24dp, 걷기모양은 @drawable/ic_walk_black_24dp-->
            <TextView
                android:id="@+id/itemname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="17sp"
                android:layout_marginLeft="7dp"
                android:textColor="@android:color/black"
                tools:text="버스번호/도보로 이동"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sectime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#C62828"
                tools:text="7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C62828"
                android:text="분 ("/>
            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C62828"
                tools:text="2000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C62828"
                android:text="m)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/startBusStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                tools:text="출발정류장"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"/>
            <TextView
                android:id="@+id/endBusStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="도착정류장"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ("/>
            <TextView
                android:id="@+id/numberBusStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정류장)"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>